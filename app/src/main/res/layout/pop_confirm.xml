<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@drawable/white_top_10"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/popw_back"
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:layout_alignParentRight="true"
                android:padding="@dimen/dp15"
                android:src="@drawable/pop_back" />
            <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="付款详情"
                android:textColor="#333333"
                android:textSize="16sp" />
        </RelativeLayout>
        <TextView
            android:layout_marginBottom="@dimen/dp18"
            android:id="@+id/pop_price"
            android:layout_marginTop="@dimen/dp10"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥99.00"
            android:textColor="#ffa12d"
            android:textSize="18sp"
            android:textStyle="bold" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginLeft="@dimen/dp12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="考试人数"
                android:textColor="#333333"
                android:textSize="15sp"/>
            <TextView
                android:layout_marginRight="@dimen/dp15"
                android:id="@+id/pop_people"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共3人"
                android:textColor="#333333"/>
        </RelativeLayout>
        <View
            android:layout_marginTop="@dimen/dp15"
            android:layout_marginLeft="@dimen/dp12"
            android:layout_marginRight="@dimen/dp12"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#eeeeee"/>
        <RelativeLayout
            android:gravity="center_vertical"
            android:id="@+id/pop_confirm_wx_rel"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp12"
                android:src="@drawable/wx" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp43"
                android:text="微信支付"
                android:textColor="#141414"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/pop_confirm_wx"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:padding="@dimen/dp17"
                android:src="@drawable/login_yes" />
        </RelativeLayout>
        <View
            android:layout_marginLeft="@dimen/dp12"
            android:layout_marginRight="@dimen/dp12"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#eeeeee"/>
        <RelativeLayout
            android:id="@+id/pop_confirm_zfb_rel"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp12"
                android:src="@drawable/zfb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp43"
                android:text="支付宝支付"
                android:textColor="#141414"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/pop_confirm_zfb"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:padding="@dimen/dp17"
                android:src="@drawable/login_no" />
        </RelativeLayout>

        <View
            android:id="@+id/pop_confirm_yue_view"
            android:layout_marginLeft="@dimen/dp12"
            android:layout_marginRight="@dimen/dp12"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#eeeeee"/>
        <TextView
            android:id="@+id/popw_submit"
            android:gravity="center"
            android:background="@drawable/orange_22"
            android:layout_marginBottom="@dimen/dp20"
            android:layout_marginTop="@dimen/dp60"
            android:layout_marginLeft="@dimen/dp13"
            android:layout_marginRight="@dimen/dp13"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp45"
            android:text="确认支付  ￥690.00"
            android:textColor="#ffffff"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>
